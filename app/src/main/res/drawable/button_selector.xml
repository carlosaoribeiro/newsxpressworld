<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado pressionado (quando o botão é clicado) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primaryDarkColor"/>
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="@color/white"/>
        </shape>
    </item>

    <!-- Estado desativado (quando o botão está desabilitado) -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray"/>
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="@color/dark_gray"/>
        </shape>
    </item>

    <!-- Estado normal (padrão) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/buttonColor"/>
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="@color/white"/>
        </shape>
    </item>

</selector>
